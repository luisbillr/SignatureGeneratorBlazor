@page "/firma"
@using SignatureGenerator.Shared.Components.Signature
@using SignatureGenerator.Shared.Components.Clients
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <Card Client="Client"></Card>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @*<CCreateOrEditClient EClient="GetClientValues" ></CCreateOrEditClient>*@
            <EditForm Model="Client">
                <div class="shadow p-3 mb-1 bg-white rounded">
                    <div class="row">
                        <div class="col-md-6">
                            <h3>Informacion</h3>
                        </div>
                       
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <input class="form-control" @bind-value="Client.Name" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" @bind-value="Client.Description" @bind-value:event="oninput" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <input class="form-control" @bind-value="Client.PhoneNumber" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" @bind-value="Client.Email" @bind-value:event="oninput" />
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>
<button type="button" @onclick="()=>GetClientValues(Client)">Generar</button>

