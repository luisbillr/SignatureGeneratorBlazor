@page "/firma"
@using SignatureGenerator.Shared.Components.Signature
@using SignatureGenerator.Shared.Components.Clients
<div class="col-md-12" >
    <div class="row" style="justify-content:center;">
        <div class="" >
            <Card Client="Client" Signatures="Signatures"></Card>
        </div>
    </div>
    <br />
    <div class="row" style="justify-content:center;">
        <div class="" style="">
            @*<CCreateOrEditClient EClient="GetClientValues" ></CCreateOrEditClient>*@
            <EditForm Model="Client">
                <div class="shadow p-3 mb-1 bg-white rounded">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h3>Informacion</h3>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Nombre</label>
                                        <input class="form-control" @bind-value="Client.Name" @bind-value:event="oninput" />
                                    </div>
                                    <div class="col-md-6">
                                        <label>Descripcion</label>
                                        <input class="form-control" @bind-value="Client.Description" @bind-value:event="oninput" />
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Telefono</label>
                                        <input class="form-control" @bind-value="Client.PhoneNumber" @bind-value:event="oninput" />
                                    </div>
                                    <div class="col-md-6">
                                        <label>Direccion</label>
                                        <input class="form-control" @bind-value="Client.Address" @bind-value:event="oninput" />
                                    </div>
                                    @*<div class="col-md-6">
                                        <input class="form-control" @bind-value="Client.Email" @bind-value:event="oninput" />
                                    </div>*@
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <span class="dot @IsColorCheck("#368488")" style="background-color:#368488;" @onclick="@(e => Signatures.Color = "#368488")"></span>
                                <span class="dot @IsColorCheck("slategrey")" style="background-color:slategrey;" @onclick="@(e => Signatures.Color = "slategrey")"></span>
                                <span class="dot @IsColorCheck("dodgerblue")" style="background-color:dodgerblue;" @onclick="@(e => Signatures.Color = "dodgerblue")"></span>
                                <span class="dot @IsColorCheck("darkred")" style="background-color:darkred;" @onclick="@(e => Signatures.Color = "darkred")"></span>
                                <span class="dot @IsColorCheck("pink")" style="background-color:pink;" @onclick="@(e => Signatures.Color = "pink")"></span>
                            </div>
                        </div>
                        <div class="row">
                            <button id="btnDescargar" class="btn btn-icon btn-outline-dark btn-lg btn-block" type="button" title="Descargar Firma" @onclick="()=>SaveSignature()">
                                <i class="fa fa-download"></i>
                            </button>
                        </div>
                    </div>
                  
                   
                </div>
            </EditForm>
        </div>
    </div>
</div>
